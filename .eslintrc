{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "no-trailing-spaces": 1,
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "import/extensions": 1,
    "newline-per-chained-call": 0,
    "class-methods-use-this": 0,
    "import/no-unresolved": [2, { "commonjs": true }],
    "no-shadow": ["error", { "allow": ["req", "res", "err"] }]
  }
 }
